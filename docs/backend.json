{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents an application user.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "roleIds": { "type": "array", "items": { "type": "string" } },
        "tenantId": { "type": "string" },
        "siteId": { "type": "string" }
      },
      "required": ["uid", "email", "tenantId"]
    },
    "Role": {
      "title": "Role",
      "description": "A collection of permissions that can be assigned to users.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "tenantId": { "type": "string" },
        "permissions": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name", "tenantId"]
    },
    "Permission": {
      "title": "Permission",
      "description": "A single action that can be permitted or denied.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" }
      },
      "required": ["id", "description", "category"]
    },
    "Payslip": {
      "title": "Payslip",
      "description": "Metadata for an individual employee payslip.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "uid": { "type": "string" },
        "employeeId": { "type": "string" },
        "payPeriod": { "type": "string" },
        "issuedAt": { "type": "string", "format": "date-time" },
        "storagePath": { "type": "string" },
        "status": { "type": "string", "enum": ["available", "missing", "importError"] },
        "readAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "uid", "payPeriod", "storagePath"]
    },
    "PayrollRun": {
      "title": "Payroll Run",
      "description": "Summary of a payroll import process.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "payPeriod": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "imported", "published", "closed"] },
        "importedCount": { "type": "number" },
        "matchedCount": { "type": "number" },
        "unmatchedCount": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "payPeriod", "status"]
    },
    "PayrollInput": {
      "title": "Payroll Input",
      "description": "An input for payroll, such as overtime, requiring manager approval.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "uid": { "type": "string" },
        "type": { "type": "string", "enum": ["overtime", "allowance", "shift", "standby"] },
        "units": { "type": "number" },
        "notes": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected", "finalized"] },
        "submittedByUid": { "type": "string" },
        "approvedByUid": { "type": "string" }
      },
      "required": ["tenantId", "uid", "type", "units", "status", "submittedByUid"]
    },
    "PaperlessConsent": {
      "title": "Paperless Consent",
      "description": "Records an employee's consent to receive documents electronically.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "uid": { "type": "string" },
        "consentGiven": { "type": "boolean" },
        "consentAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "uid", "consentGiven"]
    },
    "FormTemplate": {
      "title": "Form Template",
      "description": "A template for creating paperless HR forms.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "fieldsSchema": { "type": "object" }
      },
      "required": ["tenantId", "name"]
    },
    "FormSubmission": {
      "title": "Form Submission",
      "description": "A submitted instance of a paperless form.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "templateId": { "type": "string" },
        "createdByUid": { "type": "string" },
        "status": { "type": "string", "enum": ["submitted", "inReview", "approved", "rejected"] },
        "data": { "type": "object" }
      },
      "required": ["tenantId", "templateId", "createdByUid", "status"]
    },
    "EmployeeProfile": {
      "title": "Employee Profile",
      "description": "Stores personal and work information about an employee.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "uid": { "type": "string" },
        "employeeId": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "position": { "type": "string" },
        "department": { "type": "string" },
        "site": { "type": "string" },
        "contact": { "type": "object", "properties": { "phone": { "type": "string" }, "email": { "type": "string" } } }
      },
      "required": ["uid", "tenantId", "employeeId", "firstName", "lastName"]
    },
    "TrainingRecord": {
      "title": "Training Record",
      "description": "A record of an employee's training or certification.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "uid": { "type": "string" },
        "courseName": { "type": "string" },
        "status": { "type": "string", "enum": ["Compliant", "Expiring Soon", "Expired"] },
        "expiryDate": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "uid", "courseName", "status"]
    },
    "Alert": {
      "title": "Alert",
      "description": "Represents a system-generated alert requiring attention.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string", "description": "The ID of the tenant." },
        "moduleKey": { "type": "string", "description": "The key of the module that generated the alert." },
        "severity": { "type": "string", "enum": ["Low", "Medium", "High", "Critical"] },
        "status": { "type": "string", "enum": ["New", "Acknowledged", "Resolved"] },
        "description": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "moduleKey", "severity", "status", "description", "createdAt"]
    },
    "Task": {
      "title": "Task",
      "description": "Represents an actionable task for a user or system.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string", "description": "The ID of the tenant." },
        "moduleKey": { "type": "string", "description": "The key of the module that generated the task." },
        "taskType": { "type": "string", "enum": ["CAPA", "Inspection", "Pilot", "Maintenance"] },
        "status": { "type": "string", "enum": ["Todo", "In Progress", "Done"] },
        "description": { "type": "string" },
        "dueDate": { "type": "string", "format": "date-time" },
        "assignee": { "type": "string", "description": "User or group ID" }
      },
      "required": ["tenantId", "moduleKey", "taskType", "status", "description"]
    },
    "ActivityFeedItem": {
      "title": "Activity Feed Item",
      "description": "An item in the global activity feed, like an audit log.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string", "description": "The ID of the tenant." },
        "moduleKey": { "type": "string", "description": "The key of the module related to the activity." },
        "timestamp": { "type": "string", "format": "date-time" },
        "user": { "type": "string", "description": "User ID who performed the action" },
        "action": { "type": "string", "description": "A short description of the action taken." },
        "details": { "type": "object", "description": "An object containing more details about the event." }
      },
      "required": ["tenantId", "timestamp", "user", "action"]
    },
    "ComplianceItem": {
      "title": "Compliance Item",
      "description": "Represents a single compliance item for a person or asset.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["License", "Medical", "Training", "Induction"] },
        "subject": { "type": "string", "description": "Person or asset ID" },
        "expiryDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Compliant", "Expiring Soon", "Expired"] }
      },
      "required": ["type", "subject", "status"]
    },
    "LoadPassport": {
        "title": "Load Passport",
        "description": "Represents the entire lifecycle of a single haulage load.",
        "type": "object",
        "properties": {
            "passportId": { "type": "string", "description": "Unique identifier for the load passport." },
            "vehicleId": { "type": "string", "description": "ID of the vehicle carrying the load." },
            "materialType": { "type": "string", "description": "Type of material being transported." },
            "status": { "type": "string", "enum": ["In Progress", "Completed", "Exception"] },
            "origin": { "type": "string", "description": "The starting point of the load." },
            "destination": { "type": "string", "description": "The intended destination of the load." },
            "createdAt": { "type": "string", "format": "date-time" },
            "lastUpdatedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["passportId", "vehicleId", "materialType", "status", "origin", "destination", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Collection of all application users."
    },
    "/roles": {
      "schema": { "$ref": "#/backend/entities/Role" },
      "description": "Collection of all roles."
    },
    "/permissions": {
      "schema": { "$ref": "#/backend/entities/Permission" },
      "description": "Collection of all available permissions."
    },
    "/payslips": {
      "schema": { "$ref": "#/backend/entities/Payslip" },
      "description": "Collection of all employee payslips."
    },
    "/payrollRuns": {
      "schema": { "$ref": "#/backend/entities/PayrollRun" },
      "description": "Collection of all payroll runs."
    },
    "/payrollInputs": {
      "schema": { "$ref": "#/backend/entities/PayrollInput" },
      "description": "Collection of all payroll inputs."
    },
    "/paperlessConsents": {
      "schema": { "$ref": "#/backend/entities/PaperlessConsent" },
      "description": "Collection of all paperless consents."
    },
    "/formTemplates": {
      "schema": { "$ref": "#/backend/entities/FormTemplate" },
      "description": "Collection of all form templates."
    },
    "/formSubmissions": {
      "schema": { "$ref": "#/backend/entities/FormSubmission" },
      "description": "Collection of all form submissions."
    },
    "/employeeProfiles": {
      "schema": { "$ref": "#/backend/entities/EmployeeProfile" },
      "description": "Collection of all employee profiles."
    },
    "/trainingRecords": {
      "schema": { "$ref": "#/backend/entities/TrainingRecord" },
      "description": "Collection of all training records."
    },
    "/alerts": {
      "schema": { "$ref": "#/backend/entities/Alert" },
      "description": "Collection of all system-wide alerts."
    },
    "/tasks": {
      "schema": { "$ref": "#/backend/entities/Task" },
      "description": "Collection of all actionable tasks."
    },
    "/activityFeed": {
      "schema": { "$ref": "#/backend/entities/ActivityFeedItem" },
      "description": "A global audit trail of system and user activities."
    },
    "/complianceItems": {
      "schema": { "$ref": "#/backend/entities/ComplianceItem" },
      "description": "Collection of all compliance items."
    },
    "/loadPassports": {
        "schema": { "$ref": "#/backend/entities/LoadPassport" },
        "description": "Collection of all load passports, tracking the lifecycle of a haulage load."
    },
    "/loadPassports/{passportId}/loadEvents": {
        "schema": { "$ref": "#/backend/entities/LoadEvent" },
        "description": "Subcollection of events for a specific load passport."
    }
  }
}
