{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    },
    "nextjs": {
      "command": "npm",
      "args": [
        "run",
        "dev"
      ]
    }
  }
}
