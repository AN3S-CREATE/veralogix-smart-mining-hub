
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // For prototype purposes, allow read/write access to all documents for any signed-in user.
    // This will be locked down with more granular, tenant-aware rules later.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
